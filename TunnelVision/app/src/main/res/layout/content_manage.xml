<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:rv_centered="true"
    app:rv_type="rectangle">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_manage_accountmanagement_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_manage_accountmanagement"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/colorIconsDark"
            android:drawableRight="@drawable/ic_chevron_right_gray_light"
            android:padding="@dimen/card_margin"
            android:text="Account Management"
            android:gravity="start|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_manage_notification_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_manage_accountmanagement_container"
        android:layout_marginTop="12dip"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="2dip"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_manage_notification"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/colorIconsDark"
            android:drawableRight="@drawable/ic_chevron_right_gray_light"
            android:padding="@dimen/card_margin"
            android:text="Notification"
            android:gravity="start|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_manage_privacysafety_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_manage_notification_container"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="2dip"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_manage_privacysafety"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/colorIconsDark"
            android:drawableRight="@drawable/ic_chevron_right_gray_light"
            android:padding="@dimen/card_margin"
            android:text="Privacy and Safety"
            android:gravity="start|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_manage_generalsettings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_manage_privacysafety_container"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="12dip"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_manage_generalsettings"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/colorIconsDark"
            android:drawableRight="@drawable/ic_chevron_right_gray_light"
            android:padding="@dimen/card_margin"
            android:text="General Settings"
            android:gravity="start|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_manage_feedback_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_manage_generalsettings_container"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="2dip"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_manage_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/colorIconsDark"
            android:drawableRight="@drawable/ic_chevron_right_gray_light"
            android:padding="@dimen/card_margin"
            android:text="Feedback"
            android:gravity="start|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_manage_about_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_manage_feedback_container"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="2dip"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_manage_about"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/colorIconsDark"
            android:drawableRight="@drawable/ic_chevron_right_gray_light"
            android:padding="@dimen/card_margin"
            android:text="About"
            android:gravity="start|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_manage_clearcache_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_manage_about_container"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="12dip"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_manage_clearcache"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/colorIconsDark"
            android:drawableRight="@drawable/ic_chevron_right_gray_light"
            android:padding="@dimen/card_margin"
            android:text="Clear Cache(9.1MB)"
            android:gravity="start|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_manage_signout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_manage_clearcache_container"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_manage_signout"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@android:color/transparent"
            android:padding="@dimen/card_margin"
            android:text="Sign Out"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent" />
    </android.support.v7.widget.CardView>
</com.andexert.library.RippleView>
