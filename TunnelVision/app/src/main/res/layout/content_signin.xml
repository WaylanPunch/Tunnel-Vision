<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    app:rv_centered="true"
    app:rv_type="rectangle">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_signin_username_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_normal_height"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin_top">

        <EditText
            android:id="@+id/et_signin_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Username"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_signin_password_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_normal_height"
        android:layout_below="@+id/cv_signin_username_container"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin">

        <EditText
            android:id="@+id/et_signin_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.CardView>

    <CheckBox
        android:id="@+id/cb_signin_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cv_signin_password_container"
        android:layout_below="@+id/cv_signin_password_container"
        android:text="@string/signin_show_password"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_signin_privacypolicy_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cv_signin_password_container"
        android:layout_below="@+id/cb_signin_show_password"
        android:text="By creating an account, you are agreeing to our Privacy Policy." />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_signin_login_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_normal_height"
        android:layout_below="@+id/tv_signin_privacypolicy_tip1"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_signin_register"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/button_signup_text"
                android:textColor="@color/colorPrimary" />


            <Button
                android:id="@+id/btn_signin_login"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="@string/button_signin_text"
                android:textColor="@color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</com.andexert.library.RippleView>
