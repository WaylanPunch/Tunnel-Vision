<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/ll_collection_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_collection_item_icon_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top">

            <ImageView
                android:id="@+id/iv_collection_item_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:background="@drawable/bg_icon_default_accent"
                android:minHeight="@dimen/imageview_list_normal_height"
                android:scaleType="centerCrop" />
            <!-- https://github.com/H07000223/FlycoLabelView -->
            <com.flyco.labelview.LabelView
                android:id="@+id/lv_collection_item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:lv_text="Hot"
                app:lv_text_size="12sp" />
        </FrameLayout>


        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/civ_collection_item_avatar"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/fl_collection_item_icon_container"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_user_avatar_3"
            app:siBorderColor="@color/grayLight"
            app:siBorderWidth="1dp"/>

        <TextView
            android:id="@+id/tv_collection_item_displayname"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_below="@+id/fl_collection_item_icon_container"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@+id/civ_collection_item_avatar"
            android:drawableLeft="@drawable/ic_gender_female_accent"
            android:gravity="center"
            android:text="1111111" />

        <TextView
            android:id="@+id/tv_collection_item_createddate"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_below="@+id/tv_collection_item_displayname"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@+id/civ_collection_item_avatar"
            android:drawableLeft="@drawable/ic_clock_gray"
            android:gravity="center"
            android:text="2222222" />

        <TextView
            android:id="@+id/tv_collection_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignLeft="@+id/civ_collection_item_avatar"
            android:layout_alignRight="@+id/fl_collection_item_icon_container"
            android:layout_below="@+id/civ_collection_item_avatar"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="33333333" />

        <TextView
            android:id="@+id/tv_collection_item_repeat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_normal_height"
            android:layout_alignLeft="@+id/tv_collection_item_content"
            android:layout_below="@+id/tv_collection_item_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_repeat_primary"
            android:gravity="center"
            android:text="@string/repeat" />

        <TextView
            android:id="@+id/tv_collection_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_normal_height"
            android:layout_below="@+id/tv_collection_item_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_comment_outline_primary"
            android:gravity="center"
            android:text="@string/comment" />

        <TextView
            android:id="@+id/tv_collection_item_like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_normal_height"
            android:layout_alignRight="@+id/tv_collection_item_content"
            android:layout_below="@+id/tv_collection_item_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_heart_primary"
            android:gravity="center"
            android:text="@string/like" />
    </RelativeLayout>

</android.support.v7.widget.CardView>