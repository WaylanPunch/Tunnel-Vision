<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/iv_image_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_horizontal"
        android:background="@drawable/ic_drawer_header_background"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_image_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:gravity="start|center_vertical"
        android:padding="4dip"
        android:text="title"
        android:textColor="@color/grayLight" />

    <ImageView
        android:id="@+id/iv_image_item_download"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_gravity="end|bottom"
        android:focusable="false"
        android:background="@drawable/ic_cloud_download_gray_light" />
</android.support.v7.widget.CardView>