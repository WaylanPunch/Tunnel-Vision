<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.way.tunnelvision.ui.SplashActivity$PlaceholderFragment">


    <ImageView
        android:id="@+id/iv_splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_splash_background_0"
        android:scaleType="centerCrop" />
    
    <!-- https://github.com/markushi/android-circlebutton -->
    <at.markushi.ui.CircleButton
        android:id="@+id/cbtn_splash_enter"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dip"
        android:src="@drawable/ic_splash_enter"
        app:cb_color="@color/colorAccent"
        app:cb_pressedRingWidth="8dip" />
</FrameLayout>
